generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(uuid())
  category Category @relation(fields: [category_id], references: [id])
  name_product String
  description String
  rating Float
  price String
  amount Int
  color String[]
  size String[]
  tag String?
  discount Int?
  price_discount String?
  image_url String?
  created_at DateTime? @default(now())

  @@map("products")
  category_id String
}

model Category {
  id String @id @default(uuid())
  name_category String
  created_at DateTime? @default(now())

  @@map("categories")
  products Product[]
}

model Review {
  id String @id @default(uuid())
  name_person String
  comment String
  rating Float
  created_at DateTime? @default(now())

  @@map("reviews")
}